    <!-- L√≥gica del Generador de Bytebeat (este bloque no necesita cambios grandes) -->
    <script type="module">
        let audioContext;
        let scriptProcessorNode;
        let sampleRate = 44100;
        let currentSampleTime = 0;
        let isPlaying = false;

        const bytebeatCodeTextArea = document.getElementById('bytebeatCode');
        const playButton = document.getElementById('playButton');
        const stopButton = document.getElementById('stopButton');
        const messageBox = document.getElementById('messageBox'); // Para mensajes del bytebeat

        const defaultBytebeatFormula = "(t*5&t>>7)|(t*3&t>>10)";
        bytebeatCodeTextArea.value = defaultBytebeatFormula;

        function showMessage(message, type = 'error') {
            if (messageBox) { // Aseg√∫rate de que el elemento exista
                messageBox.textContent = message;
                messageBox.className = `message-box show ${type}`;
            } else {
                console.warn("messageBox no encontrado para mostrar el mensaje:", message);
            }
        }

        function hideMessage() {
            if (messageBox) { // Aseg√∫rate de que el elemento exista
                messageBox.className = 'message-box';
            }
        }

        function initAudio() {
            if (audioContext && audioContext.state === 'running') {
                audioContext.close();
            }
            audioContext = new (window.AudioContext || window.webkitAudioContext)();
            sampleRate = audioContext.sampleRate;

            scriptProcessorNode = audioContext.createScriptProcessor(0, 1, 1);

            scriptProcessorNode.onaudioprocess = function(event) {
                if (!isPlaying) return;

                const outputBuffer = event.outputBuffer.getChannelData(0);
                let formulaFunction;

                try {
                    // eslint-disable-next-line no-new-func
                    formulaFunction = new Function('t', `return ${bytebeatCodeTextArea.value};`);
                } catch (e) {
                    stopAudio();
                    showMessage(`Error de sintaxis en la f√≥rmula: ${e.message}`, 'error');
                    return;
                }

                for (let i = 0; i < outputBuffer.length; i++) {
                    let value;
                    try {
                        value = formulaFunction(currentSampleTime);
                        value = parseFloat(value);
                        if (isNaN(value)) {
                            value = 0;
                        }
                        outputBuffer[i] = Math.max(-1.0, Math.min(1.0, value / 256.0));
                    } catch (e) {
                        stopAudio();
                        showMessage(`Error de ejecuci√≥n en la f√≥rmula: ${e.message}`, 'error');
                        for (let j = i; j < outputBuffer.length; j++) {
                            outputBuffer[j] = 0;
                        }
                        return;
                    }
                    currentSampleTime++;
                }
            };

            currentSampleTime = 0;
            isPlaying = true;
        }

        playButton.addEventListener('click', () => {
            if (!isPlaying) {
                hideMessage();
                initAudio();
                scriptProcessorNode.connect(audioContext.destination);
                showMessage('Reproduciendo...', 'success');
            } else {
                showMessage('Ya est√° reproduciendo.', 'success');
            }
        });

        stopButton.addEventListener('click', () => {
            stopAudio();
            showMessage('Detenido.', 'success');
        });

        function stopAudio() {
            if (isPlaying) {
                isPlaying = false;
                if (scriptProcessorNode) {
                    scriptProcessorNode.disconnect();
                }
                if (audioContext) {
                    audioContext.close().then(() => {
                        audioContext = null;
                        scriptProcessorNode = null;
                        currentSampleTime = 0;
                    });
                }
            }
        }

        window.addEventListener('beforeunload', stopAudio);
    </script>
