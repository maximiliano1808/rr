            <div id="chatMessageBox" class="message-box">
                <!-- Los mensajes del chat (errores/√©xito) se mostrar√°n aqu√≠ -->
            </div>
        </div>

        <hr class="border-gray-700 my-8">

        <!-- NUEVA SECCI√ìN: Escritorio de Suscriptores -->
        <div>
